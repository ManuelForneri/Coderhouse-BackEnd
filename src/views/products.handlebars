<div class="products-container">
  <h1>Listado de productos</h1>

  {{#each products}}
    <div class="card w-50" id="{{this._id}}">
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.price}}</p>
        <p class="card-text">{{this.description}}</p>
        <a href="/product-details/{{this._id}}" class="btn btn-primary">Ver mas</a>
      </div>
    </div>

  {{/each}}

  <div>
    {{#if response.payload.hasPrevPage}}
      <a href="{{response.payload.prevPageURL}}">⬅️anterior</a>
    {{/if}}
    {{#if response}}<span>Pagina
        {{response.payload.page}}
        de
        {{response.payload.totalPages}}</span>
    {{/if}}
    {{#if response.payload.hasNextPage}}
      <a href="{{response.payload.nextPageURL}}">siguiente➡️</a>
    {{/if}}
  </div>
</div>